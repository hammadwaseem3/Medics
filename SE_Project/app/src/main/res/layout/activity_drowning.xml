<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back123456"
    tools:context="com.example.dell_pc.driver_se.FirstAid.Drowning">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/choking_txt"
            android:textSize="17sp"
            android:textColor="#000F00"
            android:text="Notify a lifeguard, if one is close. If not, ask someone to call 911.\n\nIf you are alone, follow the steps below.\n\n\u2022Take the person out of the water.
\n\n\u2022Place your ear next to the person's mouth and nose. Do you feel air on your cheek?Look to see if the person's chest is moving.
\n\n\u2022Check the person's pulse for 10 seconds.
\n\n\u2022If There is No Pulse, Start Carefully place person on back.For an adult or child, place the heel of one hand on the center of the chest.

"
            />

        <ImageView

            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="200dp"

            android:layout_gravity="center"
            android:src="@drawable/drow"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textColor="#000F00"
            android:text="if this does not work try , Mouth-to-mouth resuscitation."
            />

        <ImageView

            android:layout_marginTop="10dp"
            android:layout_width="270dp"
            android:layout_height="200dp"

            android:layout_gravity="center"
            android:src="@drawable/drown1"


            />

    </LinearLayout>
</ScrollView>
